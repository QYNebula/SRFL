---
// src/components/Header.astro

// 1. 【技术重点】直接从 Astro 全局对象获取当前路径
const pathname = Astro.url.pathname;

// 2. 【自我感应】只要路径是以 /en 开头，就自动判定为英文模式
const isEnglish = pathname.startsWith('/en');
const currentLang = isEnglish ? 'en' : 'fr';

// 3. 动态前缀
const prefix = isEnglish ? '/en' : '';

// 4. 导航链接
const navItems = [
  { name: 'Home', href: `${prefix}/` },
  { name: 'About us', href: `${prefix}/about/` },
  { name: 'SQB', href: `${prefix}/sqb/` },
];
---

<header class="nav-container">
  <div class="nav-content">
    <a href={`${prefix}/`} class="logo-area">
      <img src="/images/logo.png" alt="SRFL Logo" class="nav-logo" />
      <span class="squadron-name">SRFL SQUADRON</span>
    </a>

    <nav class="nav-links">
      {navItems.map(item => (
        <a href={item.href}>{item.name}</a>
      ))}
    </nav>

    <div class="right-section">
      <div class="lang-selector">
        <select id="langSelect">
          <option value="/en/" selected={isEnglish}>English</option>
          <option value="/" selected={!isEnglish}>Français</option>
        </select>
      </div>
      <a href="/login" class="admin-link">Admins</a>
    </div>
  </div>
</header>

<style>
  .nav-container {
    width: 100%;
    background: rgba(19, 21, 26, 0.8); /* 半透明黑色 */
    backdrop-filter: blur(10px); /* 磨砂玻璃效果 */
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: fixed; /* 固定在顶部 */
    top: 0;
    z-index: 1000;
  }

  .nav-content {
    max-width: 100%;
    margin: 0 auto;
    padding: 0.8rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo-area {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: white;
    z-index: 1001; /* 确保不被绝对定位覆盖 */
  }

  .nav-logo {
    height: 70px;
    width: auto;
  }

  .squadron-name {
    font-weight: bold;
    font-size: 1.5rem;
    letter-spacing: 1px;
    color: #edba3a; 
  }

  .nav-links {
    display: flex;
    gap: 5rem;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .nav-links a {
    text-decoration: none;
    color: #ccc;
    font-size: 1.2rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: #edba3a;
  }

  /* 右侧容器：横向排列 */
  .right-section {
    display: flex;
    align-items: center;
    gap: 15px;
    z-index: 1001;
  }

  .lang-selector select {
    background: #222;
    color: white;
    border: 1px solid #444;
    padding: 4px 8px;
    border-radius: 4px;
    cursor: none !important; /* 维持你的自定义鼠标逻辑 */
  }

  /* Admin 链接样式 */
  .admin-link {
    text-decoration: none;
    color: #edba3a; /* 主题黄色 */
    font-size: 0.8rem;
    letter-spacing: 0.5px;
    opacity: 0.7;
    transition: opacity 0.3s, transform 0.3s;
  }

  .admin-link:hover {
    opacity: 1;
    text-decoration: underline;
  }
</style>

<script>
  const select = document.getElementById('langSelect');
  if (select) {
    select.addEventListener('change', (e) => {
      const target = (e.target as HTMLSelectElement).value;
      window.location.href = target;
    });

    // 自动检测并同步下拉框状态
    const currentPath = window.location.pathname;
    if (currentPath.startsWith('/en')) {
        (select as HTMLSelectElement).value = '/en/';
    } else {
        (select as HTMLSelectElement).value = '/';
    }
  }
</script>